<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.addnewjob.NewJobPicAttachmentFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:text="הגדר תמונה למשרה(לא חובה)"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textDirection="rtl"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonTakePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="צלם תמונה" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGetFromGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="הבא תמונה מהגלריה" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivJobPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp" />


</LinearLayout>