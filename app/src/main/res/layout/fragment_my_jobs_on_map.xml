<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/change_parameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/my_jobs_layouts_margins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/jobs_parameters_change_invoker_layout" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_flag_shower"
        android:layout_width="386dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:src="@android:drawable/presence_video_online"
        app:layout_constraintBottom_toTopOf="@+id/button_change_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_parameters" />
    <Button
        android:id="@+id/button_change_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="change flag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>