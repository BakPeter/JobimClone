<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="country_text_theme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/county_item_text_color</item>
    </style>

    <style name="four_digits_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/digit_entered</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="code_verification_text_view_text_color">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="code_verification_next_change_number_theme" parent="code_verification_text_view_text_color">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="code_verification_text_view_theme" parent="code_verification_text_view_text_color">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="code_verification_small_theme" parent="code_verification_text_view_text_color">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="search_parameters_title_theme">
        <item name="android:padding">@dimen/search_job_layouts_padding</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="search_parameters_text_view_action_theme" parent="search_parameters_title_theme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="taped_chosen_theme">
        <item name="android:textColor">@color/taped_button_chosen_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="taped_not_chosen_theme">
        <item name="android:textColor">@color/taped_button_not_chosen_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="new_job_filled_out">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="new_job_not_filled_out">
        <item name="background">@color/colorPrimary</item>
    </style>




</resources>
