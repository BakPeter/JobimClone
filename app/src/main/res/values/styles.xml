<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="country_text_theme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/county_item_text_color</item>
    </style>

    <style name="four_digits_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/digit_entered</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="code_verification_text_view_text_color">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="code_verification_next_change_number_theme" parent="code_verification_text_view_text_color">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="code_verification_text_view_theme" parent="code_verification_text_view_text_color">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="code_verification_small_theme" parent="code_verification_text_view_text_color">
        <item name="android:textSize">15sp</item>
    </style>


    <color name="digit_entered">@color/colorPrimary</color>
</resources>
